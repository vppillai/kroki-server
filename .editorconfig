# EditorConfig helps maintain consistent coding styles
# across various editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{html,css,js}]
indent_size = 4

[Dockerfile]
indent_size = 4